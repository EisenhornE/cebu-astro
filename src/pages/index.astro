    <!-- Header -->
    <header class="border-b-4 inline-block w-fit-content mb-4 ml-20">
      <h1>Upcoming Events in</h1>
    </header>
    <div>
      <!-- TODO: add CSR script here -->
    </div>
  </section>

  <!-- Videos -->
  <section class="grid grid-rows-4 grid-flow-col gap-4 p-12 text-[24px]">
    <header class="">
      <div class="border-b-4 inline-block w-fit-content ml-20">
        Videos of Cebu
      </div>
    </header>

    <!-- Video -->
