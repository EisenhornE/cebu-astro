---
import trendingJSON from "../../data/trending.json";
---

<section class="my-20 mx-12 bg-[#2B5F8F] rounded-tl-3xl h-3/4">
  <h1 class="pl-16 pt-8 text-white text-3xl">Trending Now</h1>
  {
    trendingJSON.banner.map((banner) => {
      return (
        <section>
          <figure class="relative h-full">
            <div class="relative top-6 ml-16 max-w-1/2 max-h-1/2">
              <img
                src={banner.imageUrl}
                alt={banner.alt}
                class="w-3/4 rounded-tl-3xl"
              />
            </div>
            <figcaption class="absolute top-0 right-0 mt-6 w-1/2 h-full bg-white">
              <h1 class="pl-20 pt-24 text-8xl" id="best">
                Best in 2023
              </h1>
              <div class="mt-16">
                <h2 class="px-8 pt-4 font-bold">{banner.name}</h2>
                <p class="px-8 pt-4">{banner.description}</p>
              </div>
            </figcaption>
          </figure>
        </section>
      );
    })
  }
</section>

<section class="flex gap-4 mx-32 my-8">
  {
    trendingJSON.contents.map((trending) => {
      return (
        <div class="flex-1">
          <img
            src={trending.imageUrl}
            alt={trending.alt}
            class="w-full h-full object-cover hovereffect"
          />
          <div class="text-center pt-3 text-xl">{trending.name}</div>
        </div>
      );
    })
  }
</section>

<style>
  .hovereffect {
    border-radius: 8px;
    transition: transform 0.2s ease-in-out;
  }
  .hovereffect:hover {
    transform: scale(1.1);
    box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.3);
  }
</style>
